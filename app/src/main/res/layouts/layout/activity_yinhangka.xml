<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="vertical">

    <com.zykj.yixiu.app.MyTopBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        MyTopBar:rightBackground="@mipmap/activity_fh"
        MyTopBar:titleText="银行卡"
        MyTopBar:titleTextColor="#00cccc"
        MyTopBar:titleTextSize="8sp"></com.zykj.yixiu.app.MyTopBar>

    <include
        layout="@layout/avtivity_include_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

 <FrameLayout
     android:layout_width="match_parent"
     android:layout_margin="5dp"
     android:background="@mipmap/lubeijing"
     android:layout_height="120dp">
     <ImageView
         android:layout_width="40dp"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="20dp"
         android:layout_height="40dp"
         android:src="@mipmap/bainongye" />
     <TextView
         android:layout_width="wrap_content"
         android:text="农业银行"
         android:textColor="#ffffff"
         android:textSize="18sp"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="70dp"
         android:layout_height="wrap_content" />
     <TextView
         android:layout_width="wrap_content"
         android:text="储蓄卡"
         android:textColor="#ffffff"
         android:textSize="15sp"
         android:layout_marginTop="45dp"
         android:layout_marginLeft="70dp"
         android:layout_height="wrap_content" />
     <ImageView
         android:layout_width="150dp"
         android:layout_height="match_parent"
         android:layout_gravity="right"
         android:scaleType="fitXY"
         android:layout_marginRight="30dp"
         android:src="@mipmap/toumingnongye" />

     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_gravity="bottom"
         android:gravity="right"
         android:layout_marginRight="50dp"
         android:layout_marginBottom="20dp"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:text="****"
             android:textColor="#ffffff"
             android:textSize="20sp"
             android:gravity="bottom"
             android:layout_height="match_parent" />
         <TextView
             android:layout_width="wrap_content"
             android:text="****"
             android:layout_marginLeft="10dp"
             android:textColor="#ffffff"
             android:textSize="20sp"
             android:gravity="bottom"
             android:layout_height="match_parent" />
         <TextView
             android:layout_width="wrap_content"
             android:text="****"
             android:textColor="#ffffff"
             android:textSize="20sp"
             android:gravity="bottom"
             android:layout_marginLeft="10dp"
             android:layout_height="match_parent" />
         <TextView
             android:layout_width="wrap_content"
             android:text="1989"
             android:textColor="#ffffff"
             android:textSize="20sp"
             android:layout_marginBottom="5dp"
             android:layout_marginLeft="10dp"

             android:layout_height="wrap_content" />
     </LinearLayout>
 </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
           android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_height="wrap_content"
           >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/huikongxinquan" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@mipmap/huishi" />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="添加银行卡"
            android:textColor="#bcbcbc"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>