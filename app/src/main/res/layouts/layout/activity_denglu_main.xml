<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/denglu_beijing"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/lietu"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="一修哥"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="240dp"
        android:hint="请输入手机号"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/denglu_toumingtiao"
        android:layout_height="45dp"
        android:id="@+id/activity_denglu_et_shoujihao"
        android:text="18745044776" />

    <EditText
        android:layout_width="240dp"
        android:hint="请输入密码"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/activity_denglu_et_mima"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/denglu_toumingtiao"
        android:layout_height="45dp"
        android:text="123456" />


    <Button
        android:layout_width="260dp"
        android:background="@mipmap/denglu_lantiao"
        android:layout_gravity="center_horizontal"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/activity_denglu_bt_denglu"
        android:layout_marginTop="20dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/activity_denglu_tv_zhuche"
            android:textColor="#e4e4e4"
            android:text="注册"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#e4e4e4"
            android:id="@+id/activity_denglu_tv_wangjimima"
            android:layout_marginLeft="80dp"
            android:text="忘记密码"
            />
    </LinearLayout>
</LinearLayout>