<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="vertical">

    <com.zykj.yixiu.app.MyTopBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/title_fanhui"
        android:paddingTop="3dp"
        MyTopBar:rightBackground="@mipmap/activity_fh"
        MyTopBar:titleText="注册"
        MyTopBar:titleTextColor="#00cccc"
        MyTopBar:titleTextSize="9sp"></com.zykj.yixiu.app.MyTopBar>

    <include
        layout="@layout/avtivity_include_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:padding="5dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:id="@+id/zhuce_shoujihao"
            android:layout_marginLeft="10dp"
            android:hint="请输入手机号" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:padding="5dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:id="@+id/zhuce_yanzhengma"
            android:layout_marginLeft="10dp"
            android:hint="请输入验证码" />

        <Button
            android:layout_width="150dp"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:id="@+id/activity_denglu_zhuce_bt_yanzhengma"
            android:textSize="16sp"
            android:background="@mipmap/zhuce_chengtiao"
            android:layout_height="40dp" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:background="@mipmap/ok_q"
        android:text="注册"
        android:textColor="#ffffff"
        android:layout_margin="20dp"
        android:id="@+id/activity_denglu_zhuce_bt_zhuce"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
</LinearLayout>