<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="vertical">

    <com.zykj.yixiu.app.MyTopBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        MyTopBar:rightBackground="@mipmap/activity_fh"
        MyTopBar:titleText="地址管理"
        android:id="@+id/title_fanhui"
        MyTopBar:titleTextColor="#00cccc"
        MyTopBar:titleTextSize="9sp"></com.zykj.yixiu.app.MyTopBar>

    <include
        layout="@layout/avtivity_include_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:id="@+id/dizhiguanli_activity_xinzengdizhi"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/huikongxinquan" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@mipmap/huishi" />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="新增地址"
            android:textColor="#bcbcbc"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/dizhiguanli_lv"
        android:layout_height="match_parent"></ListView>




</LinearLayout>