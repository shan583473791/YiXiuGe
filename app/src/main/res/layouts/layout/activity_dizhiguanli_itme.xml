<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dizhiguanli_itme_name"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="李雪剑" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:id="@+id/dizhiguanli_itme_shoujihao"
                android:gravity="right"
                android:text="18974387487" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/dizhiguanli_itme_dizhi"
            android:text="黑龙江省哈尔滨市道里区安广街7号永平小气区7单元409室" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@mipmap/huixian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/item_iv_address"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/landuihao" />

                <TextView
                    android:id="@+id/item_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="默认"
                    android:textColor="#00cccc" />

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/dizhiguanli_itme_bianji"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/lanfangxian"
                        android:text="编辑"
                        android:layout_gravity="center"
                        android:textColor="#949494" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/dizhiguanli_itme_shanchu"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/lanfangxian"
                        android:text="删除"
                        android:layout_gravity="center"
                        android:textColor="#949494" />

                </LinearLayout>





        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>