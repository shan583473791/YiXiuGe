<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="vertical">

    <com.zykj.yixiu.app.MyTopBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        MyTopBar:rightBackground="@mipmap/activity_fh"
        MyTopBar:titleText="密码"
        MyTopBar:titleTextColor="#00cccc"
        MyTopBar:titleTextSize="9sp"></com.zykj.yixiu.app.MyTopBar>

    <include
        layout="@layout/avtivity_include_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:padding="5dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:id="@+id/mima_et_mima"
            android:layout_marginLeft="10dp"
            android:hint="请输入您的密码" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:padding="5dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/mima_et_chongmima"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:hint="请重新输入您的密码" />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:background="@mipmap/ok_q"
        android:text="确认"
        android:textColor="#ffffff"
        android:id="@+id/mima_bt_ok"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
</LinearLayout>